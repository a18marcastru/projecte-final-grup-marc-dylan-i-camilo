{% extends 'base.html.twig' %}

{% block title %}Comentarios index{% endblock %}

{% block body %}
    <h1>Comentarios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Valoracion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comentario in comentarios %}
            <tr>
                <td>{{ comentario.id }}</td>
                <td>{{ comentario.descripcion }}</td>
                <td>{{ comentario.valoracion }}</td>
                <td>
                    <a href="{{ path('app_comentarios_show', {'id': comentario.id}) }}">show</a>
                    <a href="{{ path('app_comentarios_edit', {'id': comentario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comentarios_new') }}">Create new</a>
{% endblock %}
