{% extends 'base.html.twig' %}

{% block title %}Tiquets index{% endblock %}

{% block body %}
    <h1>Tiquets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Precio_total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tiquet in tiquets %}
            <tr>
                <td>{{ tiquet.id }}</td>
                <td>{{ tiquet.fecha ? tiquet.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tiquet.precioTotal }}</td>
                <td>
                    <a href="{{ path('app_tiquets_show', {'id': tiquet.id}) }}">show</a>
                    <a href="{{ path('app_tiquets_edit', {'id': tiquet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tiquets_new') }}">Create new</a>
{% endblock %}
