    </nav>
    <h1>Reservas index</h1>
    <br>
    <div id="buscador">
        <form method="post" action="/reservas/buscar">
            <p>Busca la reserva con el email del usuario:</p>
            <input name="email" value="">
            <input class="btn btn-primary" type="submit" value="Cercar">
        </form>
    </div>
    <a href="{{ path('app_reservas_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>email</th>
                <th>Hora</th>
                <th>Dia</th>
                <th>Mes</th>
                <th>Telefono</th>
                <th>Precio_total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserva in reservas %}
            <tr>
                <td>{{ reserva.id }}</td>
                <td>{{ reserva.email }}</td>
                <td>{{ reserva.telefono }}</td>
                <td>{{ reserva.hora }}</td>
                <td>{{ reserva.dia }}</td>
                <td>{{ reserva.mes }}</td>
                <td>{{ reserva.precioTotal }}â‚¬</td>
                <td>
                    <a href="{{ path('app_reservas_show', {'id': reserva.id}) }}">show</a>
                    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
