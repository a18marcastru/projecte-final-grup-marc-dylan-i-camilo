{% extends 'base.html.twig' %}

{% block title %}Reservas{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ reserva.fecha ? reserva.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ reserva.hora ? reserva.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ reserva.telefono }}</td>
            </tr>
            <tr>
                <th>Precio_total</th>
                <td>{{ reserva.precioTotal }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservas_index') }}">back to list</a>

    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>

    {{ include('reservas/_delete_form.html.twig') }}
{% endblock %}
